@model Demo_web_MVC.Models.ViewModel.LoginViewModel;

@{
    ViewData["Title"] = "Đăng nhập";
}
<h1>Đăng nhập</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form asp-action="Login" asp-controller="User" method="post">

    <div>
        <label>Username</label>
        <input asp-for="UsernameOrEmail" />
        <span asp-validation-for="UsernameOrEmail"></span>
    </div>
    <div>
        <label>Mật khẩu</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Đăng nhập</button>
    <a asp-action="Register" asp-controller="User" >Register</a>
    <div>
        <a asp-action="ForgotPassword" asp-controller="User">ForgotPassword</a>
    </div>
</form>