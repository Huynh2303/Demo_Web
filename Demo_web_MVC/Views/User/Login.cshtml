@model Demo_web_MVC.Models.User;

@{
    ViewData["Title"] = "Đăng nhập";
}
<h1>Đăng nhập</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form asp-action="Login" asp-controller="User" method="post">

    <div>
        <label>Username</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label>Mật khẩu</label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash"></span>
    </div>
    <button type="submit">Đăng nhập</button>
    <a asp-action="Register" asp-controller="User" >Register</a>
</form>